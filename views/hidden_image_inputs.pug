mixin hiddenImageInputs(figure)
	- const hasNoImage = (!figure.image  || (figure.image && (figure.image.data === undefined || figure.image.data === null)));
		input(type='hidden' name='existingImageData' value=(hasNoImage ? '' : figure.image.data.toString('base64')))
		input(type='hidden' name='existingImageContentType' value=(hasNoImage ? '' : figure.image.contentType))
