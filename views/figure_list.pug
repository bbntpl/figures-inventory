extends layout

block content
	h1.text-3xl.font-bold.text-primary-600.mb-8.text-center.py-6 #{title}
	if figures.length <= 0
		p.text-sm.font-medium.text-gray-600.mt-2.text-center There are no figures yet.
	else 
		p.text-lg.font-medium.text-gray-600.mt-2.text-center Total number of figures: #{figures.length}	
	a.text-center(href='/figures/create')
		button(class='bg-green-500 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline hover:bg-green-700') Add Figure
	div(class='mt-5 grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4')
		each figure in figures
			div.bg-white.shadow-md.rounded-lg.p-4
				img(src=figure.imageSrc, alt=figure.name).object-cover.object-top.w-full.h-48.rounded-lg
				a(href=`/figures/${figure.id}` class='h-full hover:no-underline')
					h2.text-xl.font-bold.text-primary-600.mt-4.transition-colors.duration-200(class='hover:text-primary')= figure.name
				h4.text-md.font-medium.text-gray-500.mt-1= figure.character.franchise
				//- p.text-sm.font-medium.text-gray-600.mt-2= figure.description
				div.flex.justify-between.items-center.mt-4
					span.text-lg.font-semibold.text-black-600= '$' + figure.price
					span(class='inline-block bg-black text-white rounded-sm px-4 py-2 hover:bg-primary')
						a(href=`/figures/${figure.id}` class='h-full hover:no-underline') View Details

