extends layout

block content
  h1(class='text-2xl font-bold mb-4') Create a New Character

  form(method='post' action='/characters/create')
    label(for='name') Name
    input#name(type='text' name='name' class='border border-black px-4 py-2' required)

    label(for='franchise') Franchise
    input#franchise(type='text' name='franchise' class='border border-black px-4 py-2' required)

    label(for='background') Background
    textarea#background(name='background' class='border border-black px-4 py-2')

    button(type='submit' class='bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-700') Create Character
